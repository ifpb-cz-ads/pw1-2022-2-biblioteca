<div class="col-md-6 mx-auto mb-5">
	<div class="mt-3">
		<h1>Criar livro</h1>
		<form action="/api/criarlivro" enctype="multipart/form-data" method="POST">
			<div class="form-group mt-3" >
				<label for="inputIsbn">Isbn:</label>
				<input type="text" class="form-control" id="inputIsbn" placeholder="Digite o ISBN do livro" name="isbn" required>
			</div>

			<div class="form-group mt-3" >
				<label for="inputTitulo">Titulo:</label>
				<input type="text" class="form-control" id="inputTitulo" placeholder="Digite o titulo" name="titulo" required>
			</div>

			<div class="form-group mt-3" >
				<label for="inputAutor">Autor:</label>
				<input type="text" class="form-control" id="inputAutor" placeholder="Digite o nome do autor" name="autor" required>
			</div>

			<div class="form-group mt-3" >
				<label for="inputTitulo">Data de lan√ßamento:</label>
				<input type="date" class="form-control" id="inputData" name="anoLancamento" required>
			</div>

			<div class="form-group mt-3" >
							<label for="inputImage">Capa:</label>
							<input type="file" class="form-control" id="inputImage" name="image" required>
						</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Criar Livro</button>
			</div>
		</form>
	</div>
</div>
